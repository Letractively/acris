<?xml version="1.0" encoding="UTF-8"?>

<module>

	<!-- Gilead dependencies -->
	<inherits name='net.sf.gilead.Adapter4Gwt15'/>
	<inherits name='net.sf.gilead.emul.java5.ejb3.Ejb3'/>

	<source path="gilead.client" />
	<source path="gilead.rpc" />

	<!-- Gilead dynamic proxy classes -->
	<generate-with class="net.sf.gilead.proxy.gwt.Gwt15ProxyGenerator">
		<any>
		    <when-type-is class="sk.seges.acris.security.gilead.rpc.user_management.domain.UserPreferences" />
        	<when-type-is class="sk.seges.acris.security.gilead.rpc.user_management.domain.RolePermission" />
			<when-type-is class="sk.seges.acris.security.gilead.rpc.user_management.domain.GenericUser" />
			<when-type-is class="sk.seges.acris.security.gilead.rpc.user_management.domain.UserWithAuthorities" />
		</any>
	</generate-with>

	<generate-with class="net.sf.gilead.proxy.gwt.Gwt15ProxyGenerator">
		<when-type-assignable class="sk.seges.acris.security.rpc.domain.ITransferableObject" />
	</generate-with>

</module>