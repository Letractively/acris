<?xml version="1.0" encoding="UTF-8"?>

<module>
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.i18n.I18N" />

	<inherits name='sk.seges.acris.Callbacks' />

	<!-- Gilead dependencies -->
	<inherits name='net.sf.gilead.Adapter4Gwt15'/>
	<inherits name='net.sf.gilead.emul.java5.ejb3.Ejb3'/>

	<inherits name='sk.seges.acris.security.Rpc' />
	<inherits name='sk.seges.acris.security.Session' />
	<!-- Spring emulation -->
	<inherits name='sk.seges.acris.security.rpc.Spring' />

	<source path="client" />

	<!-- Gilead dynamic proxy classes -->
	<generate-with class="net.sf.gilead.proxy.gwt.Gwt15ProxyGenerator">
		<any>
		    <when-type-is class="sk.seges.acris.security.rpc.user_management.domain.UserPreferences" />
        	<when-type-is class="sk.seges.acris.security.rpc.user_management.domain.RolePermission" />
			<when-type-is class="sk.seges.acris.security.rpc.user_management.domain.GenericUser" />
<!--			<when-type-is class="sk.seges.acris.security.rpc.user_management.domain.UserWithAuthorities" />-->
		</any>
	</generate-with>

	<generate-with class="net.sf.gilead.proxy.gwt.Gwt15ProxyGenerator">
		<when-type-assignable class="sk.seges.acris.security.rpc.domain.ITransferableObject" />
	</generate-with>

	<!-- Security generators -->
	<generate-with class="sk.seges.acris.security.rebind.ManageableSecuredObjectGenerator">
		<when-type-assignable class="sk.seges.acris.security.client.ISecuredObject" />
	</generate-with>

	<generate-with
		class="sk.seges.acris.security.rebind.RuntimeSecuredObjectGenerator">
		<when-type-assignable
			class="sk.seges.acris.security.client.IRuntimeSecuredObject" />
	</generate-with>

</module>