<?xml version="1.0" encoding="UTF-8"?>

<module>
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.i18n.I18N" />

	<inherits name='sk.seges.acris.Core' />
	<inherits name='sk.seges.acris.Binding' />
	<inherits name='sk.seges.acris.Callbacks' />

	<inherits name='sk.seges.acris.security.Session' />

	<source path="client" />
	<source path="shared" />

	<!-- Security generators -->
	<generate-with class="sk.seges.acris.security.rebind.ManageableSecuredObjectGenerator">
		<when-type-assignable class="sk.seges.acris.security.client.ISecuredObject" />
	</generate-with>

	<generate-with class="sk.seges.acris.security.rebind.RuntimeSecuredObjectGenerator">
		<when-type-assignable class="sk.seges.acris.security.client.IRuntimeSecuredObject" />
	</generate-with>
</module>