<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>acris-recorder</artifactId>
	<packaging>war</packaging>
	<name>AcrIS Event Recorder Client</name>

	<parent>
		<groupId>sk.seges.acris</groupId>
		<artifactId>acris-recorder-parent</artifactId>
		<version>2.0.0-SNAPSHOT</version>
		<relativePath>../acris-recorder-parent</relativePath>
	</parent>

	<properties>
		<gwt.client.module>sk.seges.acris.recorder.Recorder</gwt.client.module>
	</properties>

  	<build>
		<outputDirectory>${project.build.directory}/${artifactId}-${project.version}/WEB-INF/classes</outputDirectory>  	

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<configuration>
					<compileReport>true</compileReport>
					<gwtVersion>${gwt.version}</gwtVersion>
					<logLevel>INFO</logLevel>
					<port>8890</port>
					<module>${gwt.client.module}</module>
					<runTarget>${gwt.client.module}/${gwt.client.html}</runTarget>

					<!-- style>DETAILED</style--><!-- use OBF for prod -->
					<style>OBF</style>
					<noServer>false</noServer>
					<extraJvmArgs> -Dfile.encoding=utf-8</extraJvmArgs>
					<debugPort>8990</debugPort>
					<shellServletMappingURL>/gwt-shell-servlet</shellServletMappingURL>
					<mergedWebXml>${project.build.directory}/${project.artifactId}-${project.version}/WEB-INF/web.xml</mergedWebXml>
					<hostedWebapp>${project.build.directory}/${project.artifactId}-${project.version}</hostedWebapp>
					<webappDirectory>${project.build.directory}/${project.artifactId}-${project.version}/</webappDirectory>
					<disableCastChecking>true</disableCastChecking>
					<disableClassMetadata>false</disableClassMetadata>
					<gwtSdkFirstInClasspath>true</gwtSdkFirstInClasspath>						
					<enableClosureCompiler>false</enableClosureCompiler>
					<fragmentCount>10</fragmentCount>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>mergewebxml</goal>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- Sesam dependencies -->
		<dependency>
			<groupId>sk.seges.sesam</groupId>
			<artifactId>sesam-core</artifactId>
		</dependency>
		<dependency>
			<groupId>sk.seges.sesam</groupId>
			<artifactId>sesam-core</artifactId>
			<classifier>sources</classifier>
		</dependency>

		<!-- Acris dependencies -->
		<dependency>
			<groupId>sk.seges.acris</groupId>
			<artifactId>acris-bean-wrapper-processor</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>acris-callbacks</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>acris-external</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>acris-callbacks</artifactId>
			<classifier>sources</classifier>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>acris-recorder-rpc</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>acris-recorder-rpc</artifactId>
			<classifier>sources</classifier>
		</dependency>
		<dependency>
			<groupId>sk.seges.acris</groupId>
			<artifactId>acris-site-core</artifactId>
		</dependency>
		<dependency>
			<groupId>sk.seges.acris</groupId>
			<artifactId>acris-site-core</artifactId>
			<classifier>sources</classifier>
		</dependency>

	</dependencies>
</project>
