<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                        http://www.springframework.org/schema/jee
                        http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">

	<beans:bean id="remoteContextSerializationPolicy" class="sk.seges.acris.rpc.RemoteContextSerializationPolicy" />

	<beans:bean name="securityRoleGileadService" class="sk.seges.acris.rpc.GileadGWTCustomPolicyRPCServiceExporter">
		<property name="beanManager" ref="acrisSecurityBeanManager" />
		<property name="serializationPolicy" ref="remoteContextSerializationPolicy" />
		<property name="service" ref="securityRoleService" />
		<property name="serviceInterfaces">
			<value>sk.seges.acris.security.rpc.user_management.service.ISecurityRoleService</value>
		</property>
	</beans:bean>

	<beans:bean name="userGileadService" class="sk.seges.acris.rpc.GileadGWTCustomPolicyRPCServiceExporter">
		<property name="beanManager" ref="acrisSecurityBeanManager" />
		<property name="serializationPolicy" ref="remoteContextSerializationPolicy" />
		<property name="service" ref="userService" />
		<property name="serviceInterfaces">
			<value>sk.seges.acris.security.rpc.user_management.service.IUserService</value>
		</property>
	</beans:bean>
</beans:beans>