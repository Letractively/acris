<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/aop 
                           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

 	<aop:config>
    	<aop:pointcut id='serviceMethods' expression='@annotation(sk.seges.acris.security.server.annotations.Secured) || @annotation(sk.seges.acris.security.server.annotations.RunAs) || @annotation(sk.seges.acris.security.server.annotations.BeforeAclCheck) || @annotation(sk.seges.acris.security.server.annotations.AfterAclCheck)'/>
      	<aop:advisor advice-ref='objectManagerSecurity' pointcut-ref='serviceMethods' />
 	</aop:config>

    <bean id="objectDefinitionSource" class="sk.seges.acris.security.server.annotations.SecuredMethodDefinitionSource" />
</beans>